@model ViewModel
@{
}
<form asp-action="EditTask" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label>
            Name Task
        </label>
        <input name="NameTodo" value="@Model.EditModel.NameTodo" />

    </div>
    <input hidden name="Id" value="@Model.EditModel.Id">
    <div>
        <label>Dead Line</label>
        <input type="datetime-local" name="DeadLine" value="@Model.EditModel.DeadLine">
    </div>
    <div>
        <label>Task Completed</label>
        <select name="TaskCompleted">
            <option value="true">Done </option>
            <option value="false">Not Done</option>
        </select>
    </div>
    <div>
        <select name="CategoryId" value="@Model.EditModel.CategoryId">
              <option  value="0">None</option>
            @foreach (var category in Model.Categories)

            {
                <option required value="@category.IdCategory"> @category.NameCategory</option>
            }
        </select>
    </div>
    <button type="submit">Change task</button>
</form>
